<h1>Edit</h1>



<form action="/board/update/<%= @edit_p.id %>" method="POST">
  <div class="form-group">
    <label for="formGroupExampleInput">Title</label>
    <input type="text" name="title" class="form-control" id="formGroupExampleInput" placeholder="Enter Title" value="<%= @edit_p.title %>">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">Editor</label>
    <input type="text" name="editor" class="form-control" id="formGroupExampleInput2" placeholder="Enter Editor" value="<%= @edit_p.editor %>">
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Content</label>
    <textarea class="form-control" name="content" id="exampleFormControlTextarea1" rows="3">
        <%= @edit_p.content %>
    </textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>